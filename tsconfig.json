{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2019"
        ],
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "newLine": "lf",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}