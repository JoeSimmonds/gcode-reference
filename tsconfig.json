{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "module": "CommonJS",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "newLine": "lf",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}