{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2019",
        ],
        "module": "CommonJS",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "newLine": "lf",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}