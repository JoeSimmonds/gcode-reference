{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2019",
        ],
        "module": "CommonJS",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "newLine": "lf",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "scripts",
        "test"
    ]
}