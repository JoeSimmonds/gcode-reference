{
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "printWidth": 120,
    "tabWidth": 4,
    "bracketSpacing": true,
    "quoteProps": "consistent",
    "overrides": [
        {
            "files": ".prettierrc",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
